{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CandidateThemeGenerator Output",
  "description": "List of generated video candidates.",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": { "type": "string" },
      "subject_type": { "type": "string" },
      "action_verb": { "type": "string" },
      "object_type": { "type": "string" },
      "structure_type": { "type": "string" },
      "algorithm_signals": {
        "type": "array",
        "items": { "type": "string" }
      },
      "rationale": { "type": "string" },
      "total_score": { "type": "number", "default": 0 },
      "selected": { "type": "boolean", "default": false }
    },
    "required": [
      "id",
      "subject_type",
      "action_verb",
      "object_type",
      "structure_type",
      "algorithm_signals"
    ]
  }
}